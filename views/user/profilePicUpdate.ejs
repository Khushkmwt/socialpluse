
<% layout("./layout/boilerplate.ejs") %>



  <body class="bg-gray-100">
    <div class="container mx-auto p-6 justify-center ">
      <div class="flex justify-center pt-24">
      <h1 class="text-3xl font-bold text-gray-800 ">Update Profile Picture</h1>
      </div>
      <div class="flex justify-center pt-3 pb-4 h-80 pb-4">
      <form action="/profile/updatepic/<%= user._id %>" method="POST" enctype="multipart/form-data" class="mt-6 border border-gray-300 p-4 rounded-lg w-96 ">
        <label for="profilePic" class="block text-sm font-medium text-gray-700">Select Image:</label>
        <input type="file" id="profilePic" name="profilePic" accept="image/*" class="mt-1 block w-80 px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        <button type="submit" class="mt-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded pt-3.5">Update</button>
      </form>
    </div>
    </div>
  </body>


