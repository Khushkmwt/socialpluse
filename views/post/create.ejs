<% layout("./layout/boilerplate.ejs") %>

<body class="bg-gray-100 flex-col">
    <div class="mx-auto p-4 flex items-center justify-center py-16 ">
      
        <div class="bg-white shadow rounded-lg w-1/2 pb-4 px-8">
            <form id="postForm" class="flex flex-col items-center space-y-4" action="/post/create" method="post" enctype="multipart/form-data">
                <textarea id="caption" name="caption" class="w-full p-4 m-4 border border-gray-300 rounded-lg" placeholder="Write your caption" required></textarea>
                <div class="flex items-center justify-center w-24 h-24 border border-gray-300 rounded-lg cursor-pointer">
                    <i class="fa-solid fa-image text-gray-400"></i>
                    <span class="ml-2">Upload Image</span>
                    <input type="file" id="imageUpload" name="image" accept="image/*"  required>
                </div>
                <img id="imagePreview" class="w-full max-h-96" style="display: none;">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Post</button>
            </form>
        </div>
    </div>
</body>

