

<% layout("./layout/boilerplate.ejs") %>

  <body>
    <div class=" mx-auto p-4 pl-96 w-full   ">

      <% posts.forEach(post => { %>
        <div class="bg-white shadow rounded-lg mb-4 w-1/2  border-solid border-2 border-sky-500 ">
          <div class="flex items-center p-4 border-b border-gray-300">
            <img src="<%= post.owner.Image %>" class="w-10 h-10 rounded-full mr-2" alt="Profile picture">
            <span class="font-bold"><%= post.owner.username %></span>
          </div>
          <img src="<%= post.image %>" class="w-full h-fit object-cover rounded-lg">
          <div class="flex justify-between items-center p-4">
            <div class="flex items-center space-x-4">
              <button type="button" class="text-blue-500 hover:text-blue-700">
                <i class="fa-solid fa-heart"></i>
              </button>
              <button type="button" class="text-gray-500 hover:text-gray-700">
                <a href="/post/<%= post._id %>">
                    <i class="fa-regular fa-comment"></i>
                </a>
                
              </button>
            </div>
            <span class="font-bold"><%= post.likes %></span>
          </div>
          <div class="p-4 border-b border-gray-300">
            <span class="font-bold"><%= post.owner.username %></span>
            <span> <%= post.caption %></span>
          </div>
        </div>
      <% }); %>
  
    </div>
  </body>


